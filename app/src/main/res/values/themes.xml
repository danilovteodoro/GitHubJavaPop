<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JavaPop" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JavaPop.notitle" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="titleStyle">
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textSize">@dimen/text20Dimen</item>
    </style>
    <style name="contentStyle">
        <item name="android:textColor">@color/contentColor</item>
        <item name="android:textSize">@dimen/text14Dimen</item>
    </style>
    <style name="userNameStyle">
        <item name="android:textColor">@color/titleColor</item>
        <item name="android:textSize">@dimen/text14Dimen</item>
    </style>
    <style name="fullNameStyle">
        <item name="android:textColor">@color/fullNameColor</item>
        <item name="android:textSize">@dimen/text12Dimen</item>
    </style>

    <style name="goldText">
        <item name="android:textColor">@color/gold</item>
        <item name="android:textSize">@dimen/text18Dimen</item>
    </style>

    <style name="NavDrawer">
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>